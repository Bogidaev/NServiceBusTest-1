@using NonFactors.Mvc.Grid

@model  IEnumerable<Web.Models.PeopleModel>

@(Html.Grid(Model)
      .Build(columns =>
      {
          columns.Add(c => c.Gender).Titled("Пол").Sortable(true);
          columns.Add(c => c.FirstName).Titled("Фамилия").Sortable(true);
          columns.Add(c => c.LastName).Titled("Имя").Sortable(true);
          columns.Add(c => c.Address).Titled("Адресс").Sortable(true);
          columns.Add(c => c.Email).Titled("Эл. почта").Sortable(true);
          columns.Add(c => c.Content).Titled("Стихи").Sortable(true);
          columns.Add(c => c.Distance).Titled("Повторение").Sortable(true);
      })
      .Empty("Данные не найдены")
      .Sortable()
      .Pageable()
      )